[tool.ruff]
line-length = 100
target-version = "py311"
extend-exclude = [".venv", "build", "dist", "__pycache__"]
[tool.ruff.lint]
select = ["E", "F", "I", "UP", "B"]
ignore = []
fixable = ["ALL"]
unfixable = []
[tool.ruff.lint.isort]
known-first-party = ["core", "modules", "strategy"]
combine-as-imports = true
[tool.ruff.format]
quote-style = "preserve"
indent-style = "space"
line-ending = "auto"
docstring-code-format = true
[build-system]
requires = ["setuptools>=68"]
build-backend = "setuptools.build_meta"
[project]
name = "systemoptimizer-nano"
version = "3.2.1"
description = "CogMind/Nano MAX+++ engine with SafeFS, skills, and knowledge store"
readme = "README.md"
requires-python = ">=3.11"
license = {text = "MIT"}
authors = [{ name = "Nano Shengelia" }]
classifiers = ["Programming Language :: Python :: 3 :: Only"]

# სურვილით: დამოკიდებულებები
dependencies = []
[project.scripts]
nano = "nano:main_cli"
[tool.black]
line-length = 100
target-version = ["py311"]
